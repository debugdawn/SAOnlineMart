@model List<Product>
@section title {
    <h3>Our Products</h3>
}

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="@Url.Content("~/images/" + product.Name + ".jpg")" class="card-img-top" alt="@product.Name">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <a href="@Url.Action("Details", "Shop", new { id = product.ProductId })" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
