@model List<CartItemViewModel>

<h2>Your Shopping Cart</h2>

<ul>
    @foreach (var item in Model)
    {
        <li>
            <img src="@item.ImageUrl" alt="@item.Name" />
            <div>@item.Name</div>
            <div>Price: R @item.Price</div>
            <div>Quantity: @item.Quantity</div>
            <a href="@Url.Action("Remove", "Cart", new { id = item.ProductId })">Remove</a>
        </li>
    }
</ul>

<div>Total: R @Model.Sum(x => x.Price * x.Quantity)</div>
<a href="@Url.Action("Checkout", "Cart")" class="btn btn-success">Proceed to Checkout</a>
