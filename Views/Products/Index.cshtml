@model List<WebApp2.Models.Product>

@section title {
    <h3>Products</h3>
}



@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>
                        <a class="btn btn-link" asp-controller="Products" asp-action="Edit" asp-route-id="@product.ProductId">Edit</a>
                        <form asp-controller="Products" asp-action="DeleteConfirmed" asp-route-id="@product.ProductId" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-link">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<p>
    <a class="btn btn-success" asp-controller="Products" asp-action="Create">Add Product</a>
</p>
